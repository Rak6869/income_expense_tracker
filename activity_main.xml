<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a3d62"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="@string/select_g"
        app:boxBackgroundColor="#60a3bc">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="none"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="122dp" />


    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/amt"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="432dp"
        android:background="#60a3bc"
        android:elevation="10dp"
        android:gravity="center"
        android:inputType="number"
        android:text="0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti2"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="@string/select_t"
        app:boxBackgroundColor="#60a3bc">

        <AutoCompleteTextView

            android:id="@+id/auto_complete_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="none"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="122dp" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="380dp"
        android:layout_height="87dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="432dp"
        android:background='#60a3bc'
        android:elevation="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="DD/MM/YYYY"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="357dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="select date"

        app:backgroundTint="#3c6382"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/date_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fab"
        android:layout_width="99dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="275dp"

        android:background="@drawable/baseline_add_circle_black_48dp"
        android:elevation="10dp"
        android:gravity="center"
        app:backgroundTint="#60a3bc"
        app:layout_constraintBottom_toTopOf="@+id/date_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/retrieve"
        android:layout_width="179dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="173dp"
        android:elevation="10dp"
        android:gravity="center"

        android:text="Retrieve"
        app:backgroundTint="#3c6382"
        app:backgroundTintMode="screen"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/date_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/retrieve2"
        android:layout_width="179dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="80dp"
        android:elevation="10dp"
        android:gravity="center"

        android:text="visualize"
        app:backgroundTint="#3c6382"
        app:backgroundTintMode="screen"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/date_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>